{
  "version": 2,
  "builds": [
    {
      "src": "studyapp_backend/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["prisma/schema.prisma", "prisma/dev.db*"] }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build --prefix frontend"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "studyapp_backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
